{
  "name": "Netflix and chill",
  "version": "1.0",
  "description": "Netflix and meditate whenever the context allows it",
  "author": "HackZurich Team Netflix and Chill",
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "https://*.netflix.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "manifest_version": 2
}
